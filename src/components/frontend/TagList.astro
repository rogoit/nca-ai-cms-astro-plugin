---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{
  tags.length > 0 && (
    <div class="tag-list">
      {tags.map((tag: string) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )
}

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
</style>
